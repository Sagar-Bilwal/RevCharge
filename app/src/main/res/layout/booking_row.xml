<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Recharge Station"
            android:textSize="20sp"
            android:padding="4dp"
            android:textStyle="bold"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.058"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="197dp"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="Name"
            android:textSize="20dp"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.741"
            fbutton:layout_constraintStart_toEndOf="@+id/textView2"
            fbutton:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:text="Location"
            android:textSize="20sp"
            android:textStyle="bold"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.074"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/location"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:hint="Location"
            android:textSize="20dp"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.868"
            fbutton:layout_constraintStart_toEndOf="@+id/textView1"
            fbutton:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:text="Date"
            android:textSize="20sp"
            android:textStyle="bold"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.074"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/date"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:hint="Date"
            android:textSize="20dp"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.868"
            fbutton:layout_constraintStart_toEndOf="@+id/textView4"
            fbutton:layout_constraintTop_toBottomOf="@+id/location" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.074"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/time"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:hint="Time"
            android:textSize="20dp"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.868"
            fbutton:layout_constraintStart_toEndOf="@+id/textView5"
            fbutton:layout_constraintTop_toBottomOf="@+id/date" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
